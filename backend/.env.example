# Leadership Intelligence Wrapper - Environment Configuration

# Application
APP_NAME="Leadership Intelligence Wrapper"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production

# Server
HOST="0.0.0.0"
PORT=8000

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/liw_db"

# For production with connection pooling:
# DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=0

# Storage Paths
STORAGE_PATH="/tmp/liw_uploads"
EXPORT_PATH="/tmp/liw_exports"

# AI/LLM Configuration
# Choose one or both based on your needs

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-..."
ANTHROPIC_MODEL="claude-haiku-20250514"  # Lightweight for readiness checks

# OpenAI (GPT)
# OPENAI_API_KEY="sk-..."
# OPENAI_MODEL="gpt-4o-mini"

# Security & Authentication (P1)
SECRET_KEY="your-secret-key-change-this-in-production"  # Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Account Security
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=5

# CORS Configuration (Production)
# ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# Feature Flags (P1)
ENABLE_SHAREPOINT_INTEGRATION=false
ENABLE_GOOGLE_DRIVE_INTEGRATION=false
ENABLE_ZERO_PERSISTENCE_MODE=false  # Board mode - delete doc text after export
RETENTION_YEARS=7  # Metadata retention period for deleted sources

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# External Services
# SHAREPOINT_CLIENT_ID="..."
# SHAREPOINT_CLIENT_SECRET="..."
# SHAREPOINT_TENANT_ID="..."

# GOOGLE_CREDENTIALS_FILE="path/to/credentials.json"

# Monitoring (Optional)
# SENTRY_DSN="https://..."
# NEW_RELIC_LICENSE_KEY="..."
